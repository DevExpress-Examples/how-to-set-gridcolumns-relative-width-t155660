        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        Title="MainWindow"
        Width="820"
        Height="438">

    <dxg:GridControl>
        <dxg:GridControl.Columns>
            <dxg:GridColumn Width="2*" FieldName="Col1" />
            <dxg:GridColumn Width="3*" FieldName="Col2" />
            <dxg:GridColumn Width="5*" FieldName="Col3" />
            <dxg:GridColumn Width="100" FieldName="Col4" />
        </dxg:GridControl.Columns>
    </dxg:GridControl>

</Window>
