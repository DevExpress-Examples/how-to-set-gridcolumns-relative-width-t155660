<Window xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"  x:Class="GridDynamicColumnsWIdth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GridDynamicColumnsWIdth"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        Title="MainWindow" Height="438" Width="820">
    <Grid>
        <dxg:GridControl Name="grid1" AutoGenerateColumns="AddNew">
            <dxg:GridControl.View>
                <dxg:TableView />
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Col2" local:DynamicColumnsWidth.WidthMultiplier="1"/>
                <dxg:GridColumn FieldName="Col2" local:DynamicColumnsWidth.WidthMultiplier="2"/>
                <dxg:GridColumn FieldName="Col2" local:DynamicColumnsWidth.WidthMultiplier="4"/>
                <dxg:GridColumn FieldName="Col2" local:DynamicColumnsWidth.WidthMultiplier="8"/>
                <dxg:GridColumn FieldName="Col10" Width="250"/>
                <dxg:GridColumn FieldName="Col2" local:DynamicColumnsWidth.WidthMultiplier="32"/>

            </dxg:GridControl.Columns>
            <dxmvvm:Interaction.Behaviors>
                <local:DynamicColumnsWidth/>
            </dxmvvm:Interaction.Behaviors>
        </dxg:GridControl>
    </Grid>
</Window>
